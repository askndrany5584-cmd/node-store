{
  "name": "smarts3r",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:all": "pnpm install",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"cyan,magenta\"",
    "dev:backend": "cd apps/backend && pnpm run dev",
    "dev:frontend": "cd apps/frontend && pnpm run dev",
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "build:backend": "cd apps/backend && pnpm run build",
    "build:frontend": "cd apps/frontend && pnpm run build",
    "start": "cd apps/backend && pnpm start",
    "typecheck": "pnpm run -r typecheck",
    "lint": "pnpm run -r lint",
    "test": "pnpm run -r test",
    "prisma:generate": "cd apps/backend && pnpm run prisma:generate",
    "prisma:push": "cd apps/backend && pnpm run prisma:push",
    "prisma:studio": "cd apps/backend && pnpm run prisma:studio",
    "setup-db": "cd apps/backend && pnpm run setup-db"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
